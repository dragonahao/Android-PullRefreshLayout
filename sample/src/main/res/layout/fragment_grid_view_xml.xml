<?xml version="1.0" encoding="utf-8"?>
<com.mylhyl.rslayout.SwipeRefreshGridView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ListViewXmlFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mylhyl.rslayout.widget.HeaderGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="亲！无数据哦！"
            android:visibility="gone" />
    </FrameLayout>
</com.mylhyl.rslayout.SwipeRefreshGridView>
